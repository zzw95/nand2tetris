/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    // Put your code here:
	Nand(a=sel,b=sel,out=nsel);
	And(a=a,b=nsel,out=aAndnsel);
	And(a=b,b=sel,out=bAndsel);
	Or(a=aAndnsel,b=bAndsel,out=out);
}